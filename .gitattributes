*.a filter=lfs diff=lfs merge=lfs binary
*.lib filter=lfs diff=lfs merge=lfs binary
*.jar filter=lfs diff=lfs merge=lfs binary
*.aar filter=lfs diff=lfs merge=lfs binary

# VR & AR files
*.depth filter=lfs diff=lfs merge=lfs
*.xr filter=lfs diff=lfs merge=lfs
*.matcap filter=lfs diff=lfs merge=lfs

#Documents
*.pdf filter=lfs diff=lfs merge=lfs binary

# Shader variants & compiled shaders (can be large)
*.shadervariants filter=lfs diff=lfs merge=lfs
*.shadergraph filter=lfs diff=lfs merge=lfs

# Shader Files (Raw & Compiled)
*.shader text eol=lf
*.compute text eol=lf
*.cginc text eol=lf
*.hlsl text eol=lf
*.glsl text eol=lf

# Force LF for Unity-specific text files (cross-platform compatibility) - So it doesn't has to convert between LF and CRLF
*.cs text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.meta text eol=lf
*.gitattributes text eol=lf

#---Other or unknown endings---
#Noise?
*.bytes filter=lfs diff=lfs merge=lfs binary
#PointClouds
*.ptx filter=lfs diff=lfs merge=lfs binary

